<html lang="en">
{% extends 'layout.html.j2' %}
{% block body %}

  <!-- disp data: -->
  <script src="/data/disp_data/africa/{{volcano}}_079D_07694_131313.js" charset="utf-8">
  </script>
  <!-- prob data: -->
  <script src="/data/prob_data/africa/{{volcano}}_079D_07694_131313.js" charset="utf-8">
  </script>
  <!-- licsar data: -->
  <script src="/data/licsar_data/africa/{{volcano}}_079D_07694_131313.js" charset="utf-8">
  </script>
  <!-- plotly js: -->
  <script src="{{ url_for('static',filename='js/plotly.js')}}" charset="utf-8">
  </script>
  <!-- no ui slider js: -->
  <script src="{{ url_for('static',filename='js/nouislider.min.js')}}" charset="utf-8">
  </script>
  <!-- disp plotting: -->
  <script src="{{ url_for('static',filename='js/disp_plot.js')}}" charset="utf-8" defer>
  </script>
  <!-- prob images: -->
  <script src="{{ url_for('static',filename='js/s1_images.js')}}" charset="utf-8" defer>
  </script>
  <!-- full screen images: -->
  <script src="{{ url_for('static',filename='js/fs_images.js')}}" charset="utf-8" defer>
  </script>

<div>
  <div>
    <style type="text/css">
      .acf-map {
        width: 70%;
        height: 500px;
        border: #ccc solid 1px;
        margin: 20px 0;
      }
    </style>
    <link rel="stylesheet" type="text/css" href="{{ url_for('static',filename='styles/nouislider.min.css')}}">
    <link rel="stylesheet" type="text/css" href="{{ url_for('static',filename='styles/s1_analysis.css')}}">
    <script src="https://maps.googleapis.com/maps/api/js"></script>
    <header>
      <h1>{{data.name[0]}} {{data.ID[0]}} </h1>
    </header><!-- .entry-header -->
    <ul class="tabrow">
      <li><a href="/volcano-index/{{region}}/{{country}}/{{data.name[0]}}">Observations of Deformation</a></li>
      <li class="selected">Explore Sentinel-1 imagery</li>
      <li><a href="/volcano-index/{{region}}/{{country}}/{{data.name[0]}}/download">Export as CSV</a></li>
      {% if session.usertype == 'Admins' or session.usertype == 'Collaborators' %}
      <li><a href="/volcano-index/{{region}}/{{country}}/{{data.name[0]}}/edit">Update Observations</a></li>
      {% endif %}
    </ul>
   <div>
<div style="text-align:center; width:100%; display:block; margin:auto;">

      <script>
        var volcano_name = 'erta_ale';
        var volcano_region = 'africa';
        //var volcano_frame = '079D_07694_131313';
        var volcano_frame = '014A_07688_131313';
        //var volcano_track = '79';
        var volcano_track = '14';
        var prob_img_prefix = 'prob_images/' + volcano_region + '/' + volcano_name + '_' + volcano_frame + '/';
        var lics_img_prefix = 'licsar_images/' + volcano_region + '/' + volcano_name + '_' + volcano_frame + '/';
        var data_href_prefix = 'http://gws-access.ceda.ac.uk/public/nceo_geohazards/LiCSAR_products';
      </script>
      <!-- plots: -->
      <div class='disp_plot_container' id='disp_plot_container'>
        <div class='disp_plot' id='heatmap_plot' style="text-align:center; width:40%; display:block; margin:auto;">
        </div>
        <div class='disp_plot' id='ts_plot' style="text-align:center; width:40%; display:block; margin:auto;">
        </div>
      </div>
      <!-- plot controls: -->
      <div class='plot_control_container' id='plot_control_container' style="text-align:center; width:100%; display:block; margin:auto;">
        <div class='data_type_control' id='data_type_control'>
          <button id="data_type_button_disp" onclick="disp_plot('raw');">
            displacement
          </button>
          <button id="data_type_button_coh" onclick="disp_plot('coh');">
            coherence
          </button>
        </div>
        <div class='click_mode_control' id='click_modee_control'>
          <button id="click_mode_button_select" onclick="set_click_mode('select');">
            select
          </button>
          <button id="click_mode_button_ref" onclick="set_click_mode('ref');">
            reference
          </button>
        </div>
        <p>
        <div class='data_range_control' id='data_range_control' style="text-align:center; width:100%; margin:auto;">
        </div>
        <div class='data_range_value' id='data_range_value'>
        </div>
      </div>

      <!-- probability images: -->
      <div class='prob_image_container' id='prob_image_container' style="text-align:center; width:40%; margin:auto;">
        <div class='prob_image' id='prob_image'>
          <img class="prob_image_img fs_img" id="prob_image_img" src="">
        </div>
        <p>
        <div class='prob_image_control' id='prob_image_control' style="text-align:center; width:100%; margin:auto;">
        </div>
        <div class='prob_image_value' id='prob_image_value'>
        </div>
      </div>

      <hr>

      <!-- licsar images: -->
      <div class='licsar_image_container' id='licsar_image_container'>
        <div class='licsar_image' id='licsar_image'>
          <img class="licsar_img fs_img" id="licsar_cc_img" src="">
          <img class="licsar_img fs_img" id="licsar_pha_img" src="">
          <img class="licsar_img fs_img" id="licsar_unw_img" src="">
        </div>
        <p>
        <div class='licsar_image_control' id='licsar_image_control' style="text-align:center; width:80%; margin:auto;">
        </div>
        <div class='licsar_image_value' id='licsar_image_value'>
        </div>
      </div>

    </div><!-- .entry-content -->
  </div><!-- #content -->
</div><!-- #primary -->
</div><!-- #main .wrapper -->
<!-- full screen images: -->
<div id="fs_img_div" class="fs_img_div">
  <span id="fs_img_close" class="fs_img_close">&times;</span>
  <img id="fs_img_img" class="fs_img_img" src="">
</div>
</div>
{% endblock %}

</html>
